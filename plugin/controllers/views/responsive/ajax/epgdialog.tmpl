<style>
	.epg__picon { display: inline-block; }
	.epg__picon.picon--with-background { background-color: #bababa; box-shadow: inset -20px 40px 60px #fff; }
	img[src*="default_picon"] { filter: grayscale(1) opacity(0.2); }
</style>

#set $piconCssClass = ''
#if $showPiconBackground
	#set $piconCssClass = 'picon--with-background'
#end if

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="card">
		<div class="header">
			<div class="row clearfix">
				<div class="col-xs-12 col-sm-6">
					<h2><i class="material-icons material-icons-centered">view_list</i>$tstrings['epgsearch']</h2>
				</div>
			</div>
		</div>
		<div class="body" id="epgcards">

#if len($events) == 0
			<p>$tstrings['epg_no_matches']</p>
#else

#set $dataid = 0
#for $event in $events
		#set $channel = $event.sname.replace("'", r"\'")
		#set $title = $event.title.replace("'", r"\'")
		#set $sref=quote($event.sref, safe=' ~@#$&()*!+=:;,.?/\'')

#if $MinEPGList == 'checked'

		<div class="row row-striped clearfix pad-top-15">
			<div class="col-xs-12 col-md-6">
				<div class="row">
					<div class="col-xs-3">
						<span class="epg__picon $piconCssClass">
							<img src="$event.picon" title="" class="img-responsive" style="width:80px;margin-top:-10px">
						</span>
							</div>
							<div class="col-xs-9">
								<span data-toggle="collapse" data-target="#evenid$dataid" aria-expanded="false"aria-controls="collapseExample" style="cursor:pointer;">
								<b>$event.sname</b> - $event.title<i class="material-icons material-icons-centered">expand_more</i>
								</span>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-md-3">
						<span>$event.date - $event.begin&nbsp;-&nbsp;$event.end&nbsp;($event.duration min.)</span>
					</div>
					<div class="col-xs-12 col-md-3 align-right">
						<a href="javascript:void(0);" class="theme-link-color" onclick="addTimerEvent('$sref',$event.id,false);return false;" title="$tstrings['add_timer']"><i class="material-icons material-icons-centered">alarm_add</i></a>
						<a href="javascript:void(0);" class="deltimer theme-link-color" onclick="delTimerEvent('$sref',$event.id);return false;" title="$tstrings['delete_timer']"></a>
						<a href="javascript:void(0);" class="theme-link-color" data-dismiss="modal" data-toggle="modal" data-target="#TimerModal" data-evid="$event.id" data-ref="$sref" title="$tstrings['edit_timer']"><i class="material-icons material-icons-centered">alarm</i></a>
						<a href="javascript:void(0);" class="theme-link-color" onclick="addTimerEvent('$sref',$event.id,true);return false;" title="$tstrings['add_zaptimer']"><i class="material-icons material-icons-centered">rotate_90_degrees_ccw</i></a>
					#if $at
						<a href="javascript:void(0);" class="theme-link-color" onclick="addAutoTimerEvent('$sref','$channel','$title','$event.begin','$event.end');return false;" title="$tstrings['add_autotimer']"><i class="material-icons material-icons-centered">history</i></a>
					#end if
					#if $moviedb == "Kinopoisk"
						<a href="https://www.kinopoisk.ru/index.php?first=no&kp_query=$quote($event.title)" class="theme-link-color" title="$tstrings['search_kinopoisk']" target="extdb"></a>
					#elif $moviedb == "CSFD"
						<a href="https://www.imdb.com/find?s=all&amp;q=$quote($event.title)" class="theme-link-color" title="$tstrings['search_imdb']" target="extdb"><b>IMDb</b></a>
					#else
						<a href="https://www.csfd.cz/hledat/?q=$event.title" class="theme-link-color" title="$tstrings['search_imdb']" target="extdb"><b>csfd</b></a>
					#end if
					</div>
					<div class="col-xs-12 collapse" id="evenid$dataid">
					<p>$event.shortdesc</p>
					<p>
					$event.longdesc.replace('\n',r'<br/>').replace('\8a',r'<br/>')
					</p>
				</div>
			</div>

#else

		<div class="row clearfix">
			<div class="col-xs-12">
				<div class="card" style="margin-bottom:-25px;">
					<div class="header">
						<div class="row clearfix">
							<div class="col-xs-12 col-md-2" style="margin-bottom:-10px;">
								<span class="epg__picon $piconCssClass">
									<img src="$event.picon" title="" class="img-responsive" style="width:100px;">
								</span>
								<label style="display:block;">$event.sname</label>
								#if 'ns' in $event
									<br />
									<span>
									#if '4097:' in $event.sref or '5002:' in $event.sref or 'http%3a' in $event.sref or 'https%3a' in $event.sref
										IPTV
									#else
										$event.service_type / $event.ns
									#end if
									</span>
								#end if
								</div>
								<div class="col-xs-12 col-md-6" style="word-break: break-all">
								<h2>$event.title</h2>
								<div>
								<a href="javascript:void(0);" class="theme-link-color" onclick="addTimerEvent('$sref',$event.id,false);return false;" title="$tstrings['add_timer']"><i class="material-icons material-icons-centered">alarm_add</i></a>
								<a href="javascript:void(0);" class="deltimer theme-link-color" onclick="delTimerEvent('$sref',$event.id);return false;" title="$tstrings['delete_timer']"></a>
								<a href="javascript:void(0);" class="theme-link-color" data-dismiss="modal" data-toggle="modal" data-target="#TimerModal" data-evid="$event.id" data-ref="$sref" title="$tstrings['edit_timer']"><i class="material-icons material-icons-centered">alarm</i></a>
								<a href="javascript:void(0);" class="theme-link-color" onclick="addTimerEvent('$sref',$event.id,true);return false;" title="$tstrings['add_zaptimer']"><i class="material-icons material-icons-centered">rotate_90_degrees_ccw</i></a>
							#if $at
								<a href="javascript:void(0);" class="theme-link-color" onclick="addAutoTimerEvent('$sref','$channel','$title','$event.begin','$event.end');return false;" title="$tstrings['add_autotimer']"><i class="material-icons material-icons-centered">history</i></a>
							#end if
							#if $moviedb == "Kinopoisk"
								<a href="javascript:void(0);" class="theme-link-color" target="_blank" href="https://www.kinopoisk.ru/index.php?first=no&kp_query=$quote($event.title)" title="$tstrings['search_kinopoisk']"></a>
							#elif $moviedb == "CSFD"
								<a href="javascript:void(0);" class="theme-link-color" target="_blank" href="https://www.csfd.cz/hledat/?q=$event.title" title="$tstrings['search_csfd']"><b>csfd</b></a>
							#else
								<a href="javascript:void(0);" class="theme-link-color" target="_blank" href="https://www.imdb.com/find?s=all&amp;q=$quote($event.title)" title="$tstrings['search_imdb']"><b>IMDb</b></a>
							#end if
							</div>
						</div>
						<div class="col-xs-12 col-md-4 align-right" style="word-break: break-all">
						<h2>$event.date</h2>
						<span>$event.begin&nbsp;-&nbsp;$event.end&nbsp;($event.duration min.)</span>
						</div>
					</div>
				</div>
				<div class="body">
					<div class="row clearfix">
						<div class="col-xs-12">
						#if $event.longdesc != ''
						<span data-toggle="collapse" data-target="#evenid$dataid" aria-expanded="false"aria-controls="collapseExample" style="cursor:pointer;">
						<p>$event.shortdesc</p>
						<i class="material-icons material-icons-centered">expand_more</i></span>
						<div class="collapse" id="evenid$dataid">
						<p>$event.longdesc.replace('\n',r'<br/>').replace('\8a',r'<br/>')</p>
						</div>
						#else
						<span><p>$event.shortdesc</p></span>
						#end if
					</div>
				</div>
			</div>
		</div>
		</div>
		</div>

#end if

	#set $dataid=$dataid+1
	#end for

<script>
	var t = [
#for $timer in $timers
		{'begin':$timer.begin,'end':$timer.end,'sref':'$timer.serviceref'},
#end for
	];

	var reloadTimers = true;
	jQuery(function() {
		jQuery('#editTimerForm').load('ajax/edittimer');
		if (t.length > 0) {
			var x = jQuery( ".ETV tbody" );
			if (x != undefined)
				ShowTimers(t);
		}
	});
</script>

#end if

		</div>
	</div>
</div>
