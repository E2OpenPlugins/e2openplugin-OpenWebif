<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="card">
		<div class="header">
			<div class="row clearfix">
				<div class="col-xs-12 col-sm-8 col-md-9">
					<h2 id="configtitle">
						<i class="material-icons material-icons-centered">av_timer</i>
						$tstrings['at_list']
					</h2>
				</div>
				<div class="col-xs-12 hidden-sm hidden-md hidden-lg hidden-xl">
					<div class="row vti-vspace-20"></div>
				</div>
				<div class="col-xs-12 col-sm-4 col-md-3">
					<select id="atlist" class="form-control no-default-select"></select>
				</div>
			</div>
		</div>
		<div class="body atbody">
			<div id="content_main">

				<div id="foo">
					<div class="row align-center clearfix">
						<button type="button" onclick="addAT(); return false;" class="btn btn--skinned waves-effect"><i class="material-icons">add</i><span>$tstrings['at_new']</span></button>
						<button type="button" onclick="parseAT(); return false;" class="btn btn--skinned waves-effect"><i class="material-icons">code</i><span>$tstrings['at_process']</span></span></button>
						<button type="button" name="preview" class="btn btn--skinned waves-effect" data-toggle="modal" data-target="#ATTimerModal"><i class="material-icons">view_list</i><span>$tstrings['at_preview']</span></button>
						<button type="button" onclick="listTimers(); return false;" class="btn btn--skinned waves-effect" data-toggle="modal" data-target="#ATTimerList"><i class="material-icons">alarm</i><span>$tstrings['at_timers']</span></button>
						<button type="button" onclick="getAutoTimerSettings(); return false;" data-toggle="modal" data-target="#ATSettings" class="btn btn--skinned waves-effect" data-title="$tstrings['ats_auto_timer_settings']"><i class="material-icons">settings</i><span>$tstrings['at_settings']</span></button>
					</div>
				</div>
				<div id="info" x-style="display:none;">
					<div class="row align-center clearfix">
						<button type="button" onclick="delAT(); return false;" class="btn btn--skinned waves-effect"><i class="material-icons">delete</i><span>$tstrings['at_del']</span></button>
					</div>

					<div class="row clearfix">
						<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
							<div id="ateditcontent">
								<form name="atform" method="GET" action="/autotimer/edit" id="atform">
									<input type="hidden" name="id" id="id">
													
									<fieldset style="border: none" class="atform__body">
										<div class="form-group">

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="enabled" value="1" class="form-control chk--skinned" checked>
													<label for="enabled">$tstrings['at_enabled']</label>
												</div>
												<div class="atform__details__element"></div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<label>$tstrings['name']:</label>
												</div>
												<div class="atform__details__element form-line">
													<input type="text" name="name" required placeholder="$tstrings['at_name_hint']" class="form-control">
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<label>$tstrings['at_text_match']:</label>
												</div>
												<div class="atform__details__element form-line">
													<input type="text" name="match" required placeholder="$tstrings['at_text_hint']" class="form-control">
												</div>
											</div>

											<!-- EPG encoding -->

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<label>$tstrings['at_search_type']:</label>
												</div>
												<div class="atform__details__element">
													<div class="dropdown atform__details__dropdown">
														<select name="searchType" class="form-control show-tick">
#for $searchType in $searchTypes
															<option value="$searchType">$tstrings['at_' + $searchType + '_match']</option>
#end for
														</select>
													</div>
												</div>
											</div>
												
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<label>$tstrings['at_search_strictness']:</label>
												</div>
												<div class="atform__details__element">
													<div class="dropdown atform__details__dropdown">
														<select name="searchCase" class="form-control show-tick">
															<option value="sensitive">$tstrings['at_case_sensitive']</option>
															<option value="insensitive" selected>$tstrings['at_case_insensitive']</option>
														</select>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<label>$tstrings['at_timer_type']:</label>
												</div>
												<div class="atform__details__element">
													<div class="dropdown atform__details__dropdown">
														<select name="justplay" class="form-control show-tick">
															<option value="0" selected>$tstrings['at_record']</option>
															<option value="1">$tstrings['at_zap']</option>
															<option value="2">$tstrings['at_record'] + $tstrings['at_zap']</option>
														</select>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="overrideAlternatives" value="1" class="form-control chk--skinned">
													<!-- Use automatic selection of alternates. -->
													<label for="overrideAlternatives">$tstrings['at_override_alt']</label>
												</div>
												<div class="atform__details__element"></div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_timespan" class="form-control chk--skinned">
													<!-- Only match during timespan -->
													<label for="_timespan">$tstrings['at_timespan']</label>
												</div>
												<div class="atform__details__element" style="min-height: 8ex;">
													<div id="timeSpanE" class="select-related-container dependent-section">
														<div class="atform__details__dropdown">
															<label>$tstrings['at_timespan_begin']:&nbsp;</label>
															<div class="form-line">
																<input type="time" name="timespanFrom" class="form-control" placeholder="06:30">
															</div>
														</div>
														<div class="atform__details__dropdown">
															<label>$tstrings['at_timespan_end']:&nbsp;</label>
															<div class="form-line">
																<input type="time" name="timespanTo" class="form-control" placeholder="23:30">
															</div>
														</div>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_after" class="form-control chk--skinned">
													<!-- Restrict to events on certain dates -->
													<label for="_after">$tstrings['at_datespan_before']</label>
												</div>
												<div class="atform__details__element">
													<div class="atform__details__dropdown">
														<div id="timeFrameE" class="form-line dependent-section">
															<input type="date" name="after" class="form-control">
														</div>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_before" class="form-control chk--skinned">
													<!-- Restrict to events on certain dates -->
													<label for="_before">$tstrings['at_datespan_after']</label>
												</div>
												<div class="atform__details__element">
													<div class=" atform__details__dropdown">
														<div id="beforeE" class="form-line dependent-section">
															<input type="date" name="before" class="form-control">
														</div>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_timerOffset" class="form-control chk--skinned">
													<!-- Custom offset -->
													<label for="_timerOffset">$tstrings['at_timer_offset']</label>
												</div>
												<div class="atform__details__element" style="min-height: 8ex;">
													<div id="timerOffsetE" class="select-related-container dependent-section">
														<div class="atform__details__dropdown">
															<!-- Offset before recording (mins)-->
															<label>$tstrings['at_timer_offset_before']:&nbsp;</label>
															<div class="form-line">
																<input type="number" name="offset" min="0" class="form-control">
															</div>
														</div>
														<div class="atform__details__dropdown">
															<!-- Offset after recording (mins)-->
															<label>$tstrings['at_timer_offset_after']:&nbsp;</label>
															<div class="form-line">
																<input type="number" name="offset" min="0" class="form-control">
															</div>
														</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<!-- Set maximum duration -->
													<label>$tstrings['at_max_duration']</label>
												</div>
												<div class="atform__details__element">
													<div class=" atform__details__dropdown">
														<div class="form-line">
															<!-- Maximum duration (in m) -->
															<input type="number" name="maxduration" min="0" placeholder="(in minutes)" class="form-control"><!-- TODO: i10n -->
														</div>
													</div>
												</div>
											</div>
												
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<!-- After event -->
													<label>$tstrings['at_after_event']:</label>
												</div>
												<div class="atform__details__element">
													<div class="dropdown atform__details__dropdown">
														<select name="afterevent" class="form-control show-tick">
															<option value="default" selected>$tstrings['at_after_event_standard']</option>
															<option value="nothing" selected>$tstrings['at_after_event_nothing']</option>
															<option value="standby">$tstrings['at_after_event_standby']</option>
															<option value="deepstandby">$tstrings['at_after_event_deepstandby']</option>
															<option value="auto">$tstrings['at_after_event_auto']</option>
														</select>
													</div>
												</div>
											</div>

											<div id="AftereventE" class="atform__fields-container dependent-section">
												<div class="atform__details__title">
													<input type="checkbox" id="timeSpanAE" class="form-control chk--skinned">
													<!-- Execute "After event" during timespan -->
													<label for="timeSpanAE">$tstrings['at_event_timespan']</label>
												</div>
												<div class="atform__details__element" style="min-height: 8ex;">
													<div id="timeSpanAEE" class="select-related-container dependent-section">
														<div class="atform__details__dropdown">
															<!-- Begin of "After event" timespan -->
															<label>$tstrings['at_event_timespan_begin']</label>
															<div class="form-line">
																<input type="time" name="aftereventFrom" class="form-control">
															</div>
														</div>
														<div class="atform__details__dropdown">
															<!-- End of "After event" timespan -->
															<label>$tstrings['at_event_timespan_end']</label>
															<div class="form-line">
																<input type="time" name="aftereventTo" class="form-control">
															</div>
														</div>
													</div>
												</div>
											</div>
													
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<!-- Record a maximum of x times -->
													<label>$tstrings['at_max_counter']:</label>
												</div>
												<div class="atform__details__element">
													<div class="atform__details__dropdown">
														<div class="form-line">
															<input type="number" name="counter" min="0" class="form-control">
														</div>
													</div>
												</div>
											</div>
											
											<div id="CounterE" class="atform__fields-container">
												<div class="atform__details__title">
													<!-- ?? -->
													<label>$tstrings['at_left']:</label>
												</div>
												<div class="atform__details__element">
													<div class="atform__details__dropdown">
														<div class="form-line">
															<input type="number" name="left" min="0" class="form-control">
														</div>
													</div>
												</div>
											</div>
												
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<!-- ?? -->
													<label>$tstrings['at_reset_count']:</label>
												</div>
												<div class="atform__details__element">
													<div class="dropdown atform__details__dropdown">
														<select name="counterFormat" class="form-control show-tick">
															<option value="" selected>$tstrings['at_never']</option>
															<option value="%m">$tstrings['at_monthly']</option>
															<option value="%U">$tstrings['at_weekly_sun']</option>
															<option value="%W">$tstrings['at_weekly_mon']</option>
														</select>
													</div>
												</div>
											</div>
												
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<!-- Require description to be unique -->
													<label>$tstrings['at_avoid_dup']:</label>
												</div>
												<div class="atform__details__element">
													<div class="dropdown atform__details__dropdown">
														<select name="avoidDuplicateDescription" class="form-control show-tick">
															<option value="0" selected>$tstrings['at_avoid_dup_no']</option>
															<option value="1">$tstrings['at_avoid_dup_same_service']</option>
															<option value="2">$tstrings['at_avoid_dup_any_service']</option>
															<option value="3">$tstrings['at_avoid_dup_any_service_rec']</option>
														</select>
													</div>
												</div>
											</div>

											<!-- Check for uniqueness in -->

#if $autoadjust == 1
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="autoadjust" value="1" class="form-control chk--skinned">
													<label for="autoadjust">$tstrings['autoadjust']</label>
												</div>
												<div class="atform__details__element"></div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="avoidDuplicateMovies" value="1" class="form-control chk--skinned">
													<label for="avoidDuplicateMovies">$tstrings['avoidDuplicateMovies']</label>
												</div>
												<div class="atform__details__element"></div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="allow_duplicate" value="1" class="form-control chk--skinned">
													<label for="allow_duplicate">$tstrings['allow_duplicate']</label>
												</div>
												<div class="atform__details__element"></div>
											</div>
#end if

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_location" class="form-control chk--skinned">
													<!-- Use a custom location -->
													<label for="_location">$tstrings['at_location']</label>
												</div>
												<div class="atform__details__element">
													<div id="LocationE" class="dropdown atform__details__dropdown dependent-section">
														<!-- Custom location -->
														<select name="location" class="form-control show-tick">
														#for $location in $locations
															<option value="$location">$location</option>
														#end for
														</select>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_tags" class="form-control chk--skinned">
													<label for="_tags">$tstrings['at_tags']</label>
												</div>
												<div class="atform__details__element">
													<div id="TagsE" class="dropdown atform__details__dropdown form-line dependent-section">
														<select name="tag" class="form-control no-default-select" multiple="multiple" data-select-choices="tags">
															<!-- option value="" disabled>Add tags</option --><!-- TODO: i10n -->
														</select>
													</div>
												</div>
											</div>
		
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_channels" class="form-control chk--skinned">
													<!-- Restrict to specific services -->
													<label for="_channels">$tstrings['at_channels']</label>
												</div>
												<div class="atform__details__element">
													<div id="ChannelsE" class="dropdown atform__details__dropdown form-line dependent-section">
														<select name="services" class="form-control no-default-select" multiple="multiple" data-select-choices="channels">
															<!-- option value="" disabled>Restrict to channels</option --><!-- TODO: i10n -->
														</select>
													</div>
												</div>
											</div>

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_bouquets" class="form-control chk--skinned">
													<!-- Restrict to specific bouquets -->
													<label for="_bouquets">$tstrings['bouquets']</label>
												</div>
												<div class="atform__details__element">
													<div id="BouquetsE" class="dropdown atform__details__dropdown form-line dependent-section">
														<select name="bouquets" class="form-control no-default-select" multiple="multiple" data-select-choices="bouquets">
															<!-- option value="" disabled>Restrict to bouquets</option --><!-- TODO: i10n -->
														</select>
													</div>
												</div>
											</div>

											<!-- Restrict to days -->

											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" id="_filters" class="form-control chk--skinned">
													<!-- Use other filters -->
													<label for="_filters">$tstrings['at_filter']</label>
												</div>
												<div class="atform__details__element">
												</div>
											</div>

											<div class="atform__fields-container" style="margin-top: 0;">
												<table id="filterlist" class="table table-striped table-hover FilterE"></table>
												<button type="button" id="AddFilter" class="btn btn-default waves-effect FilterE">$tstrings['add']</button>
											</div>

#if $hasVPS == 1
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="vps" value="1" class="form-control chk--skinned">
													<label for="vps">$tstrings['vps']</label>
												</div>
												<div class="atform__details__element">
													<span id="vpsE">
														<div class="col-xs-12 col-sm-4">
															<div class="row clearfix">
																<div class="col-xs-12">
																	<input type="checkbox" name="vpssm" class="form-control chk--skinned">
																	<label for="vpssm">$tstrings['safe_mode']</label>
																</div>
															</div>
														</div>
													</span>
												</div>
											</div>
#end if
#if $hasSeriesPlugin == 1
											<div class="atform__fields-container">
												<div class="atform__details__title">
													<input type="checkbox" name="series_labeling" value="1" class="form-control chk--skinned">
													<label for="series_labeling">$tstrings['at_label_series']</label>
												</div>
												<div class="atform__details__element">
												</div>
											</div>
#end if
										</div>

										<div class="row align-right clearfix">
											<button type="button" onclick="reloadAT(); return false;" class="btn btn-default waves-effect"><i class="material-icons">restore</i><span>$tstrings['reload']</span></button>
											<button type="submit" onclick="saveAT(); return false;" class="btn btn--skinned waves-effect"><i class="material-icons">save</i><span>$tstrings['at_save']</span></button>
										</div>

									</fieldset>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="ATTimerModal" class="modal fade" role="dialog">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><i class="material-icons material-icons-centered">close</i></button>
				<h4 class="modal-title">AutoTimer</h4>
			</div>
			<div class="modal-body" style="max-height: calc(100vh - 180px); overflow-y: auto;">
				<div id="atsimulatemodal"></div>
					<div style="font-size:smaller;" class="table-responsive">
						<table id="simt" border="0" class="table table-striped table-hover">
							<thead>
								<tr>
									<th>State</th>
									<th>$tstrings['name']</th>
									<th>$tstrings['at_text_match']</th>
									<th>$tstrings['channel']</th>
									<th style="text-align: right;">$tstrings['start']</th>
									<th style="text-align: right;">$tstrings['end']</th>
								</tr>
							</thead>
								<tbody id='simtb'>
								</tbody>
						</table>
					</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn waves-effect btn-default" data-dismiss="modal">$tstrings['close']</button>
			</div>
		</div>
	</div>
</div>

<div id="ATSettings" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<form name="atsettings" action="/autotimer/set" method="get">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><i class="material-icons material-icons-centered">close</i></button>
					<h4 class="modal-title">$tstrings['ats_auto_timer_settings']</h4>
				</div>
				<div class="modal-body" style="max-height: calc(100vh - 180px); overflow-y: auto;">
					<div id="atsettingdlgcont">
						<fieldset>
